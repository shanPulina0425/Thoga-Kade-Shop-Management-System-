<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="480.0" prefWidth="720.0" style="-fx-background-color: linear-gradient(to bottom right, #0f2027, #203a43, #2c5364); -fx-background-radius: 20;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Dashboard_Controller">

    <children>

         <!-- Card -->
         <VBox alignment="CENTER_LEFT" maxWidth="520.0" minWidth="360.0" prefHeight="480.0" prefWidth="720.0" spacing="18.0" style="-fx-background-radius: 15; -fx-background-color: rgba(255,255,255,0.96); -fx-background-radius: 18; -fx-border-radius: 18; -fx-border-color: rgba(255,255,255,0.35); -fx-border-width: 1;" styleClass="ra" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
             <effect>
                 <DropShadow color="rgba(0,0,0,0.25)" radius="12" />
             </effect>
             <padding>
                 <Insets bottom="28" left="28" right="28" top="28" />
             </padding>

             <!-- Title -->
             <Label style="-fx-text-fill: #0f2027;" text="Dashboard">
                 <font>
                     <Font name="Impact" size="36.0" />
                 </font>
             </Label>
             <Label style="-fx-text-fill: #4a5568;" text="Choose a module to manage">
                 <font>
                     <Font name="Segoe UI" size="13.0" />
                 </font>
             </Label>

             <!-- Buttons stack -->
             <VBox prefWidth="Infinity" spacing="12.0">
                 <Button fx:id="customerManagementButton" maxWidth="Infinity" onAction="#customerManagementACT" prefHeight="44.0" style="-fx-background-color: linear-gradient(to right, #06b6d4, #3b82f6); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12; -fx-font-size: 22; -fx-font-family: impact;" text="Customer Management">
                     <font>
                         <Font name="Impact" size="22.0" />
                     </font>
                 </Button>

                 <Button fx:id="itemManagementButton" maxWidth="Infinity" onAction="#itemManagementACT" prefHeight="44.0" style="-fx-background-color: linear-gradient(to right, #06b6d4, #3b82f6); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12; -fx-font-size: 22; -fx-font-family: impact;" text="Item Management">
                     <font>
                         <Font name="Impact" size="22.0" />
                     </font>
                 </Button>

                 <Button fx:id="supplierManagementButton" maxWidth="Infinity" onAction="#supplierManagementACT" prefHeight="44.0" style="-fx-background-color: linear-gradient(to right, #06b6d4, #3b82f6); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12; -fx-font-size: 22; -fx-font-family: impact;" text="Supplier Management">
                     <font>
                         <Font name="Impact" size="22.0" />
                     </font>
                 </Button>

                 <Button fx:id="employeeManagementButton" maxWidth="Infinity" onAction="#employeeManagementACT" prefHeight="44.0" style="-fx-background-color: linear-gradient(to right, #06b6d4, #3b82f6); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12; -fx-font-size: 22; -fx-font-family: impact;" text="Employee Management">
                     <font>
                         <Font name="Impact" size="22.0" />
                     </font>
                 </Button>

                 <!-- Back / secondary action -->
                 <Button fx:id="backButton" maxWidth="160.0" onAction="#backButtonACT" prefHeight="40.0" style="-fx-background-color: transparent;                                    -fx-border-color: #3b82f6;                                    -fx-border-width: 1;                                    -fx-border-radius: 10;                                    -fx-text-fill: #3b82f6;                                    -fx-background-radius: 10;" text="Back">
                     <font>
                         <Font name="Impact" size="20.0" />
                     </font>
                 </Button>
             </VBox>

             <!-- Footer -->
             <Label style="-fx-text-fill: #94a3b8;" text="© 2025 Thoga Kade • Dashboard">
                 <font>
                     <Font name="Segoe UI" size="11.0" />
                 </font>
             </Label>

         </VBox>
    </children>
</AnchorPane>
