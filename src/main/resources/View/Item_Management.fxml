<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="656.0" prefWidth="880.0" style="-fx-background-color: linear-gradient(to bottom right, #0f2027, #203a43, #2c5364); -fx-background-radius: 15;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Item_Management_Controller">

    <children>

         <!-- Main card -->
         <VBox maxWidth="820.0" minWidth="760.0" prefHeight="662.4" prefWidth="880.0" spacing="18.0" style="-fx-background-color: rgba(255,255,255,0.96); -fx-background-radius: 18; -fx-border-radius: 18; -fx-border-color: rgba(255,255,255,0.35); -fx-border-width: 1; -fx-border-radius: 15;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
             <effect>
                 <DropShadow color="rgba(0,0,0,0.25)" radius="12" />
             </effect>
             <padding>
                 <Insets bottom="26" left="26" right="26" top="26" />
             </padding>

             <!-- Header -->
             <VBox spacing="4.0">
                 <Label style="-fx-text-fill: #0f2027;" text="Item Management">
                     <font>
                  <Font name="Impact" size="36.0" />
               </font>
                 </Label>
                 <Label style="-fx-text-fill: #4a5568;" text="Create, update, and track inventory items">
                     <font>
                  <Font name="Segoe UI" size="13.0" />
               </font>
                 </Label>
             </VBox>

             <!-- Form grid -->
             <GridPane hgap="18" vgap="12">
                 <columnConstraints>
                     <ColumnConstraints percentWidth="24" />
                     <ColumnConstraints percentWidth="28" />
                     <ColumnConstraints percentWidth="24" />
                     <ColumnConstraints percentWidth="24" />
                 </columnConstraints>
                 <rowConstraints>
                     <RowConstraints prefHeight="40.0" />
                     <RowConstraints prefHeight="40.0" />
                     <RowConstraints prefHeight="40.0" />
                 </rowConstraints>

                 <!-- Row 1 -->
                 <Label style="-fx-text-fill: #2d3748;" text="ItemCode" GridPane.columnIndex="0" GridPane.rowIndex="0">
                     <font>
                  <Font name="Impact" size="18.0" />
               </font>
                 </Label>
                 <TextField fx:id="itemCodeTXT" prefHeight="36.0" promptText="ITM-001" style="-fx-background-color: #f7fafc;                                       -fx-background-radius: 10;                                       -fx-border-color: #e2e8f0;                                       -fx-border-radius: 10;                                       -fx-padding: 0 10 0 10;                                       -fx-text-fill: #1a202c;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                 <Label style="-fx-text-fill: #2d3748;" text="Quantity On Hand" GridPane.columnIndex="2" GridPane.rowIndex="0">
                     <font>
                  <Font name="Impact" size="18.0" />
               </font>
                 </Label>
                 <TextField fx:id="qtyOnHandTXT" prefHeight="36.0" promptText="e.g., 250" style="-fx-background-color: #f7fafc;                                       -fx-background-radius: 10;                                       -fx-border-color: #e2e8f0;                                       -fx-border-radius: 10;                                       -fx-padding: 0 10 0 10;                                       -fx-text-fill: #1a202c;" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                 <!-- Row 2 -->
                 <Label style="-fx-text-fill: #2d3748;" text="Description" GridPane.columnIndex="0" GridPane.rowIndex="1">
                     <font>
                  <Font name="Impact" size="18.0" />
               </font>
                 </Label>
                 <TextField fx:id="descriptionTXT" prefHeight="36.0" promptText="Item name / details" style="-fx-background-color: #f7fafc;                                       -fx-background-radius: 10;                                       -fx-border-color: #e2e8f0;                                       -fx-border-radius: 10;                                       -fx-padding: 0 10 0 10;                                       -fx-text-fill: #1a202c;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                 <Label style="-fx-text-fill: #2d3748;" text="Unit Price" GridPane.columnIndex="2" GridPane.rowIndex="1">
                     <font>
                  <Font name="Impact" size="18.0" />
               </font>
                 </Label>
                 <TextField fx:id="unitPriceTXT" prefHeight="36.0" promptText="e.g., 1499.99" style="-fx-background-color: #f7fafc;                                       -fx-background-radius: 10;                                       -fx-border-color: #e2e8f0;                                       -fx-border-radius: 10;                                       -fx-padding: 0 10 0 10;                                       -fx-text-fill: #1a202c;" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                 <!-- Row 3 -->
                 <Label style="-fx-text-fill: #2d3748;" text="Category" GridPane.columnIndex="0" GridPane.rowIndex="2">
                     <font>
                  <Font name="Impact" size="18.0" />
               </font>
                 </Label>
                 <TextField fx:id="categoryTXT" prefHeight="36.0" promptText="e.g., Electronics" style="-fx-background-color: #f7fafc;                                       -fx-background-radius: 10;                                       -fx-border-color: #e2e8f0;                                       -fx-border-radius: 10;                                       -fx-padding: 0 10 0 10;                                       -fx-text-fill: #1a202c;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
             </GridPane>

             <!-- Action buttons -->
             <HBox spacing="12.0">
                 <children>
                     <Button fx:id="addButton" onAction="#addButtonACT" prefHeight="42.0" prefWidth="150.0" style="-fx-background-color: linear-gradient(to right, #06b6d4, #3b82f6);                                        -fx-text-fill: white;                                        -fx-font-weight: bold;                                        -fx-background-radius: 12;" text="ADD">
                         <font>
                     <Font name="Impact" size="20.0" />
                  </font>
                     </Button>

                     <Button fx:id="deleteButton1" onAction="#deleteButtonACT" prefHeight="42.0" prefWidth="150.0" style="-fx-background-color: linear-gradient(to right, #ef4444, #f97316);                                        -fx-text-fill: white;                                        -fx-font-weight: bold;                                        -fx-background-radius: 12;" text="DELETE">
                         <font>
                     <Font name="Impact" size="20.0" />
                  </font>
                     </Button>

                     <Button fx:id="upldateButton" onAction="#updateButtonACT" prefHeight="42.0" prefWidth="170.0" style="-fx-background-color: linear-gradient(to right, #06b6d4, #3b82f6);                                        -fx-text-fill: white;                                        -fx-font-weight: bold;                                        -fx-background-radius: 12;" text="UPDATE">
                         <font>
                     <Font name="Impact" size="20.0" />
                  </font>
                     </Button>

                     <Button fx:id="clearButton" onAction="#clearButtonACT" prefHeight="42.0" prefWidth="150.0" style="-fx-background-color: transparent;                                        -fx-border-color: #3b82f6;                                        -fx-border-width: 1;                                        -fx-border-radius: 10;                                        -fx-text-fill: #3b82f6;                                        -fx-background-radius: 10;" text="CLEAR">
                         <font>
                     <Font name="Impact" size="20.0" />
                  </font>
                     </Button>
                 </children>
             </HBox>

             <!-- Table -->
             <TableView prefHeight="240.0" prefWidth="760.0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-border-radius: 12;">
                 <columns>
                     <TableColumn fx:id="tableItemCode" prefWidth="120.0" text="ItemCode" />
                     <TableColumn fx:id="tableDescription" prefWidth="220.0" text="Description" />
                     <TableColumn fx:id="tableCategory" prefWidth="180.0" text="Category" />
                     <TableColumn fx:id="tableQuantityOnHand" prefWidth="160.0" text="Quantity On Hand" />
                     <TableColumn fx:id="tableUnitPrice" prefWidth="140.0" text="Unit Price" />
                 </columns>
             </TableView>

             <!-- Footer row: Back + note -->
             <HBox alignment="CENTER_RIGHT" prefWidth="Infinity" spacing="12.0">
                 <children>
                     <Label style="-fx-text-fill: #94a3b8;" text="© 2025 Thoga Kade • Items" />
                     <Button fx:id="backButton" onAction="#backButtonOnAction" prefHeight="40.0" prefWidth="140.0" style="-fx-background-color: transparent;                                        -fx-border-color: #3b82f6;                                        -fx-border-width: 1;                                        -fx-border-radius: 10;                                        -fx-text-fill: #3b82f6;                                        -fx-background-radius: 10;" text="Back">
                         <font>
                     <Font name="Impact" size="20.0" />
                  </font>
                     </Button>
                 </children>
             </HBox>

         </VBox>
    </children>
</AnchorPane>
