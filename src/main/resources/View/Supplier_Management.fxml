<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="748.0" prefWidth="1147.0" style="-fx-background-color: linear-gradient(to bottom right, #0f2027, #203a43, #2c5364);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Supplier_Management_Controller">

    <children>
        <!-- Center container -->
        <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <!-- Main card -->
            <VBox maxWidth="1060.0" minWidth="900.0" spacing="18.0" style="-fx-background-color: rgba(255,255,255,0.96);                          -fx-background-radius: 18;                          -fx-border-radius: 18;                          -fx-border-color: rgba(255,255,255,0.35);                          -fx-border-width: 1;">
                <effect>
                    <DropShadow color="rgba(0,0,0,0.25)" radius="12" />
                </effect>
                <padding>
                    <Insets bottom="28" left="28" right="28" top="28" />
                </padding>

                <!-- Header -->
                <VBox spacing="4.0">
                    <Label style="-fx-text-fill: #0f2027;" text="Supplier Management">
                        <font>
                            <Font name="Impact" size="36.0" />
                        </font>
                    </Label>
                    <Label style="-fx-text-fill: #4a5568;" text="Create, update, and manage supplier records">
                        <font>
                            <Font name="Segoe UI" size="13.0" />
                        </font>
                    </Label>
                </VBox>

                <!-- Form Grid -->
                <GridPane hgap="18" vgap="12">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="16" />
                        <ColumnConstraints percentWidth="20" />
                        <ColumnConstraints percentWidth="16" />
                        <ColumnConstraints percentWidth="20" />
                        <ColumnConstraints percentWidth="16" />
                        <ColumnConstraints percentWidth="12" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints prefHeight="40.0" />
                        <RowConstraints prefHeight="40.0" />
                        <RowConstraints prefHeight="40.0" />
                    </rowConstraints>

                    <!-- Row 1 -->
                    <Label style="-fx-text-fill: #2d3748;" text="SupplierId" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <font>
                            <Font name="Impact" size="24.0" />
                        </font>
                    </Label>
                    <TextField fx:id="supplierIdTXT" prefHeight="36.0" promptText="SUP-001" style="-fx-background-color: #f7fafc; -fx-background-radius: 10;                                       -fx-border-color: #e2e8f0; -fx-border-radius: 10;                                       -fx-padding: 0 10 0 10; -fx-text-fill: #1a202c;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label style="-fx-text-fill: #2d3748;" text="Address" GridPane.columnIndex="2" GridPane.rowIndex="0">
                        <font>
                            <Font name="Impact" size="24.0" />
                        </font>
                    </Label>
                    <TextField fx:id="addressTXT" prefHeight="36.0" promptText="Street / Line 1" style="-fx-background-color: #f7fafc; -fx-background-radius: 10;                                       -fx-border-color: #e2e8f0; -fx-border-radius: 10;                                       -fx-padding: 0 10 0 10; -fx-text-fill: #1a202c;" GridPane.columnIndex="3" GridPane.rowIndex="0" />

                    <Label style="-fx-text-fill: #2d3748;" text="Postal Code" GridPane.columnIndex="4" GridPane.rowIndex="0">
                        <font>
                            <Font name="Impact" size="24.0" />
                        </font>
                    </Label>
                    <TextField fx:id="postalCodeTXT" prefHeight="36.0" promptText="e.g., 10115" style="-fx-background-color: #f7fafc; -fx-background-radius: 10;                                       -fx-border-color: #e2e8f0; -fx-border-radius: 10;                                       -fx-padding: 0 10 0 10; -fx-text-fill: #1a202c;" GridPane.columnIndex="5" GridPane.rowIndex="0" />

                    <!-- Row 2 -->
                    <Label style="-fx-text-fill: #2d3748;" text="Name" GridPane.columnIndex="0" GridPane.rowIndex="1">
                        <font>
                            <Font name="Impact" size="24.0" />
                        </font>
                    </Label>
                    <TextField fx:id="nameTXT" prefHeight="36.0" promptText="Supplier contact name" style="-fx-background-color: #f7fafc; -fx-background-radius: 10;                                       -fx-border-color: #e2e8f0; -fx-border-radius: 10;                                       -fx-padding: 0 10 0 10; -fx-text-fill: #1a202c;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label style="-fx-text-fill: #2d3748;" text="City" GridPane.columnIndex="2" GridPane.rowIndex="1">
                        <font>
                            <Font name="Impact" size="24.0" />
                        </font>
                    </Label>
                    <TextField fx:id="cityTXT" prefHeight="36.0" promptText="City" style="-fx-background-color: #f7fafc; -fx-background-radius: 10;                                       -fx-border-color: #e2e8f0; -fx-border-radius: 10;                                       -fx-padding: 0 10 0 10; -fx-text-fill: #1a202c;" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                    <Label style="-fx-text-fill: #2d3748;" text="Phone" GridPane.columnIndex="4" GridPane.rowIndex="1">
                        <font>
                            <Font name="Impact" size="24.0" />
                        </font>
                    </Label>
                    <TextField fx:id="phoneTXT" prefHeight="36.0" promptText="e.g., 0112345678" style="-fx-background-color: #f7fafc; -fx-background-radius: 10;                                       -fx-border-color: #e2e8f0; -fx-border-radius: 10;                                       -fx-padding: 0 10 0 10; -fx-text-fill: #1a202c;" GridPane.columnIndex="5" GridPane.rowIndex="1" />

                    <!-- Row 3 -->
                    <Label style="-fx-text-fill: #2d3748;" text="Company Name" GridPane.columnIndex="0" GridPane.rowIndex="2">
                        <font>
                            <Font name="Impact" size="24.0" />
                        </font>
                    </Label>
                    <TextField fx:id="companyNameTXT" prefHeight="36.0" promptText="Business / Organization" style="-fx-background-color: #f7fafc; -fx-background-radius: 10;                                       -fx-border-color: #e2e8f0; -fx-border-radius: 10;                                       -fx-padding: 0 10 0 10; -fx-text-fill: #1a202c;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label style="-fx-text-fill: #2d3748;" text="Province" GridPane.columnIndex="2" GridPane.rowIndex="2">
                        <font>
                            <Font name="Impact" size="24.0" />
                        </font>
                    </Label>
                    <TextField fx:id="provinceTXT" prefHeight="36.0" promptText="Province / State" style="-fx-background-color: #f7fafc; -fx-background-radius: 10;                                       -fx-border-color: #e2e8f0; -fx-border-radius: 10;                                       -fx-padding: 0 10 0 10; -fx-text-fill: #1a202c;" GridPane.columnIndex="3" GridPane.rowIndex="2" />

                    <Label style="-fx-text-fill: #2d3748;" text="Email" GridPane.columnIndex="4" GridPane.rowIndex="2">
                        <font>
                            <Font name="Impact" size="24.0" />
                        </font>
                    </Label>
                    <TextField fx:id="emailTXT" prefHeight="36.0" promptText="name@company.com" style="-fx-background-color: #f7fafc; -fx-background-radius: 10;                                       -fx-border-color: #e2e8f0; -fx-border-radius: 10;                                       -fx-padding: 0 10 0 10; -fx-text-fill: #1a202c;" GridPane.columnIndex="5" GridPane.rowIndex="2" />
                </GridPane>

                <!-- Action Buttons -->
                <HBox spacing="12.0">
                    <children>
                        <Button fx:id="addButton" onAction="#addButtonACT" prefHeight="42.0" prefWidth="150.0" style="-fx-background-color: linear-gradient(to right, #06b6d4, #3b82f6);                                        -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12;" text="ADD">
                            <font>
                                <Font name="Impact" size="20.0" />
                            </font>
                        </Button>

                        <Button fx:id="deleteButton1" onAction="#deleteButtonACT" prefHeight="42.0" prefWidth="150.0" style="-fx-background-color: linear-gradient(to right, #ef4444, #f97316);                                        -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12;" text="DELETE">
                            <font>
                                <Font name="Impact" size="20.0" />
                            </font>
                        </Button>

                        <Button fx:id="upldateButton" onAction="#updateButtonACT" prefHeight="42.0" prefWidth="170.0" style="-fx-background-color: linear-gradient(to right, #06b6d4, #3b82f6);                                        -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12;" text="UPDATE">
                            <font>
                                <Font name="Impact" size="20.0" />
                            </font>
                        </Button>

                        <Button fx:id="clearButton" onAction="#clearButtonACT" prefHeight="42.0" prefWidth="150.0" style="-fx-background-color: transparent; -fx-border-color: #3b82f6;                                        -fx-border-width: 1; -fx-border-radius: 10; -fx-text-fill: #3b82f6;                                        -fx-background-radius: 10;" text="CLEAR">
                            <font>
                                <Font name="Impact" size="20.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>

                <!-- Table -->
                <TableView prefHeight="260.0" prefWidth="1040.0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-border-radius: 12;">
                    <columns>
                        <TableColumn fx:id="tableSupplierID" prefWidth="120.0" text="Supplier Id" />
                        <TableColumn fx:id="tableName" prefWidth="160.0" text="Name" />
                        <TableColumn fx:id="tableCompanyName" prefWidth="180.0" text="Company Name" />
                        <TableColumn fx:id="tableAddress" prefWidth="160.0" text="Address" />
                        <TableColumn fx:id="tableCity" prefWidth="120.0" text="City" />
                        <TableColumn fx:id="tableProvince" prefWidth="140.0" text="Province" />
                        <TableColumn fx:id="tablePostalCode" prefWidth="140.0" text="Postal Code" />
                        <TableColumn fx:id="tablePhone" prefWidth="140.0" text="Phone" />
                        <TableColumn fx:id="tableEmail" prefWidth="200.0" text="Email" />
                    </columns>
                </TableView>

                <!-- Footer row: Back + note -->
                <HBox alignment="CENTER_RIGHT" prefWidth="Infinity" spacing="12.0">
                    <children>
                        <Label style="-fx-text-fill: #94a3b8;" text="© 2025 Thoga Kade • Suppliers" />
                        <Button fx:id="backButton" onAction="#backButtonOnAction" prefHeight="40.0" prefWidth="140.0" style="-fx-background-color: transparent; -fx-border-color: #3b82f6;                                        -fx-border-width: 1; -fx-border-radius: 10; -fx-text-fill: #3b82f6;                                        -fx-background-radius: 10;" text="Back">
                            <font>
                                <Font name="Impact" size="20.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>

            </VBox>
        </StackPane>
    </children>
</AnchorPane>
